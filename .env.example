POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=
POSTGRES_HOST=
POSTGRES_PORT=

# SQLAlchemy URL used by Alembic/app
DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Allowed Google account for login (email). Comma-separated for multiple.
GOOGLE_ACCOUNT=

# Frontend origins (comma-separated) for CORS. Use "*" to allow all (dev only).
FRONTEND_ORIGINS=http://localhost:3000

# App auth tokens
JWT_SECRET=
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

