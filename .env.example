POSTGRES_USER=avnadmin
POSTGRES_PASSWORD=change_me
POSTGRES_DB=defaultdb
POSTGRES_HOST=your-aiven-host.aivencloud.com
POSTGRES_PORT=22007

# SQLAlchemy URL used by Alembic/app
DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=require

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Allowed Google account for login (email). Comma-separated for multiple.
GOOGLE_ACCOUNT=you@example.com

# Frontend origins (comma-separated) for CORS. Use "*" to allow all (dev only).
FRONTEND_ORIGINS=http://localhost:3000

# App auth tokens
JWT_SECRET=please-change-this-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Web Push (VAPID) - generate with web-push or pywebpush
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Facebook OAuth
FB_API_VERSION=v24.0
FB_APP_ID=
FB_APP_SECRET=
